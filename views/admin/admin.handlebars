	<h5 class="add-product title">Add a Product</h5>

    <div class="container">
        <div class="row">
				<div class="col-lg-12">
					<div class="card">

						<div class="card-body">
							{{!-- <form action="" method="POST" role="form" id="productForm"> --}}
							<form id="productForm">
								<div class="form-group">
									<label for="">Category</label>
									<select class="form-control" id="categoryId">
										
				    					<option id="rings" name="rings" value="rings">Rings</option>
										<option id="necklace" name="necklace" value="necklace">Necklaces</option>
										<option id="earrings" name="earrings" value="earrings">Earrings</option>
									</select>								
								</div>

								<div class="form-group">
									<label for="">SKU</label>
									<input type="text" class="form-control" id="sku" placeholder="">
								</div>

								<div class="form-group">
									<label for="">Product Name</label>
									<input type="text" class="form-control" id="product_name" placeholder="">
								</div>

								<div class="form-group">
									<label for="">Description</label>
									<input type="text" class="form-control" id="description" placeholder="">
								</div>

								<div class="form-group">
									<label for="">Stones</label>
									<input type="text" class="form-control" id="stones" placeholder="">
								</div>

                                <div class="form-group">
									<label for="">Regular Price</label>
									<input type="number" class="form-control" id="regular_price" placeholder="">
								</div>

                                <div class="form-group">
									<label for="">Quantity</label>
									<input type="number" class="form-control" id="quantity" placeholder="">
								</div>

                                <div class="form-group">
                                    <label for="" class="control-label">Image</label>
									<input type="number" class="form-control" id="image_url" placeholder="">

                                </div>
							</form>
							<br>
							<div class="text-right">
								<button type="submit" class="btn btn-primary btn-md" id="addProductButton">Add Product</button>
							</div>
						</div>

					</div>
				</div>			
			</div>

    </div>



